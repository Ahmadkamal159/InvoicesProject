            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Total_Invoice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Tax_Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Total_Bill)
