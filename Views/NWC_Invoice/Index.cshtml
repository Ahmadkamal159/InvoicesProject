            <th>
                @Html.DisplayNameFor(model => model.NWC_Rreal_Estate_TypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Subscription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoices_Subscriber_file)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Previous_Consumption_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NWC_Invoice_Current_Consumption_Amount)
