            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NWC_Rreal_Estate_TypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NWC_Subscription.NWC_Subscription_FileID)
