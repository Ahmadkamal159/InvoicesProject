                @Html.DisplayFor(modelItem => item.NWC_Invoice_Tax_Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NWC_Invoice_Total_Bill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NWC_Invoice_Total_Reasons)
            </td>
            <td>
                <a asp-action="Edit"   class="btn btn-primary"   asp-route-id="@item.NWC_InvoiceID">تعديل</a>
